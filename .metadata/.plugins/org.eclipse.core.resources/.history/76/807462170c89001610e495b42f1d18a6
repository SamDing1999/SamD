import java.util.*;
public class ProcessingNumbers {

	public static void main(String[] args) {
		Scanner userInput = new Scanner(System.in);
		
		int max = 0;
		int min = 0;
		int sum = 0;
		int maxEven = 0;
		
		
		System.out.println("Enter a String of numbers seperated by spaces: ");
		String numbers = userInput.nextLine();
		String[] splited = numbers.split(" ");
		int lengthOfSplited = splited.length;
		
		
		
		for(int i = 0; i < lengthOfSplited; i++){
			int next = Integer.parseInt(splited[i]);
			if(i == 1){
				min = next;
				max = next;
			}else{
				if(next<min){
					min = next;
				}else if(next>max){
					max = next;
				}
			}
			if(next%2==0){
				if(next>maxEven){
					maxEven = next;
				}
				sum += next;
			}
		}
		System.out.println("max: " + max);
		System.out.println("min: " + min);
		System.out.println("sum: " + sum);
		System.out.println("maxEven: " + maxEven);
		
	}

}
